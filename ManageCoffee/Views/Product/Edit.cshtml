@model ManageCoffee.Models.Product

@{
    ViewData["Title"] = "Cập nhật sản phẩm";
}

<section class="row justify-content-center align-items-center">
    <div class="col-lg-9 col-12">
        <div class="container card me-5 p-lg-5 p-2 shadow-lg">

            <div class="row text-center align-items-center justify-content-center">
                <div class="col-1 z-3">
                    <a asp-action="Index" class="btn btn-outline-primary border border-0"><i
                            class="bi bi-arrow-left-circle h2"></i></a>
                </div>
                <div class="col-10">
                    <h3 class="fw-bold">Cập nhật sản phẩm</h3>
                </div>
                <div class="col-1"></div>

            </div>
            <hr>
            <form asp-controller="Product" asp-action="Edit" method="post" id="product-form" class="save-form"
                accept-charset="UTF-8" enctype="multipart/form-data">
                <div class="px-lg-5 px-2 py-2">
                    <div class="row">
                        <div class="col-12 col-lg-6">
                            <div class="card card-body mb-3 border border-primary select-image"
                                onclick="selectFile(this)">
                                <label for="imageFile" class="form-label cursor-pointer">
                                    <div class="ratio ratio-1x1">
                                        <img src="@(string.IsNullOrWhiteSpace(Model.Image) ? "/img/placeholder.jpg" : Model.Image)"
                                            alt="Ảnh sản phẩm" class="img-fluid rounded-4 object-fit-cover img-preview">
                                    </div>
                                </label>
                                <input type="file" class="form-control d-none" name="imageFile" accept="image/*">
                            </div>
                        </div>
                        <div class="col-12 col-lg-6">
                            <div class="mx-3 mb-3">
                                <label class="col-form-label fs-6 fw-bold" asp-for="Name">Tên sản phẩm</label>
                                <input type="text" class="form-control col-lg-9" asp-for="Name"
                                    placeholder="Nhập tên sản phẩm">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="mx-3 mb-3">
                                <label asp-for="CatalogueId" class="col-form-label fw-bold">Loại sản phẩm</label>
                                <select asp-for="CatalogueId" class="form-select text-justify">
                                    <option selected disabled hidden>--- Chọn loại sản phẩm ---</option>
                                    @foreach (var catalogue in ViewBag.Catalogues)
                                    {
                                        <option value="@catalogue.CatalogueId">@catalogue.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="CatalogueId" class="text-danger"></span>
                            </div>
                            <div class="mx-3 mb-3">
                                <label asp-for="Price" class="col-form-label fw-bold">Giá</label>
                                <input type="text" class="form-control" asp-for="Price" placeholder="Nhập giá"
                                    value="@Model.Price.ToString("0.##")">
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="mx-3 mb-3">
                                <label asp-for="Unit" class="col-form-label fw-bold">Đơn vị tính</label>
                                <input type="text" class="form-control" asp-for="Unit" placeholder="Nhập đơn vị tính">
                                <span asp-validation-for="Unit" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                   <div class="mt-3">
                            <div class="col-12 d-flex justify-content-end align-items-center">
                            <button type="submit" class="btn btn-primary fw-bold py-2">Xác nhận</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}
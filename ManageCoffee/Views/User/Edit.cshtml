@model ManageCoffee.Models.User

<section class="row justify-content-center align-items-center">
    <div class="col-lg-7 col-10">
        <div class="container card me-5 p-lg-5 p-2 shadow-lg">

            <div class="row text-center align-items-center justify-content-center">
                <div class="col-1 z-3">
                    <a asp-action="Index" class="btn btn-outline-primary border border-0"><i
                            class="bi bi-arrow-left-circle h2"></i></a>
                </div>
                <div class="col-10">
                    <h3 class="fw-bold">Cập nhật tài khoản</h3>
                </div>
                <div class="col-1"></div>

            </div>
            <hr>
            <form asp-action="Edit" method="post" id="user-form" class="save-form">
                <div class="px-lg-5 px-2 py-2">
                    <div class="row">
                        <input type="hidden" asp-for="UserId">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Tên người dùng</label>
                            <input type="text" class="form-control" asp-for="Name" placeholder="Nhập tên tài khoản">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold">Email</label>
                            <input type="text" class="form-control" asp-for="Email" placeholder="Nhập email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label fw-bold">Số điện thoại</label>
                            <input type="text" class="form-control" asp-for="Phone" placeholder="Nhập số điện thoại">
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Role" class="form-label fw-bold">Vai trò</label>
                            <select asp-for="Role" class="form-select user-role">
                                <option value="1">Admin</option>
                                <option value="2">Pha chế</option>
                                <option value="3">Nhân viên</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mt-3">
                        <div class="col-12 d-flex justify-content-end align-items-center">
                            <button type="submit" id="user-submit" class="btn btn-primary fw-bold py-2">Xác
                                nhận</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>


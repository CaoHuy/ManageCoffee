@model ManageCoffee.Models.Area
@{
    ViewData["Title"] = "Edit";
}

<section class="row justify-content-center align-items-center">
    <div class="col-7">
        <div class="container card me-5 p-5 shadow-lg">
            <h3 class="fw-bold">Cập nhật khu vực</h3>
            <hr>
            <form asp-action="Edit" method="post" id="area-form" class="save-form">
                <div class="p-5">
                    <div class="row">
                        <input type="hidden" asp-for="AreaId">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Tên khu vực</label>
                            <input type="text" class="form-control" asp-for="Name" placeholder="Nhập tên khu vực">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-6 d-flex justify-content-start">
                            <a asp-action="Index" class="btn btn-outline-primary border border-0"><i
                                    class="bi bi-arrow-left-circle h2"></i></a>
                        </div>
                        <div class="col-6 d-flex justify-content-end align-items-center">
                            <button type="submit" id="area-submit" class="btn btn-primary fw-bold py-2">Xác
                                nhận</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
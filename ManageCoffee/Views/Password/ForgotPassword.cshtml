@model ManageCoffee.Models.User
@{
    Layout = null;
    ViewData["Title"] = "ForgetPassword";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CFM - Quên mật khẩu</title>

    @* Bootstrap *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap" rel="stylesheet">
</head>

<body>
    <form asp-action="ForgotPassword" method="Post" class="container mt-5">
        <div class="row justify-content-center align-items-center mt-5">
            <div class="col-10 col-lg-6 bg-light rounded-3 px-lg-5 px-3 mb-4">

                <div class="row my-3 text-center align-items-center justify-content-center">
                    <div class="col-1">
                        <a asp-controller="Login" asp-action="Index"
                            class="btn btn-outline-primary border border-0 btn-lg"><i
                                class="bi bi-arrow-left-circle h2"></i></a>
                    </div>
                    <div class="col-10">
                        <h2 class="mt-3 mb-3">Quên mật khẩu</h2>
                    </div>
                    <div class="col-1">


                    </div>
                </div>




                <div class="form-group">
                    <label asp-for="Email" class="fw-bold mb-2"></label>
                    <input type="email" asp-for="Email" class="form-control" placeholder="Nhập email nhận mã OTP">
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <span style="color: red;">@ViewData["Null"]</span>
                </div>
                <div class="row my-3 text-end">
                    <div class="col-12 text-end"><input type="submit" value="Gửi" class="btn btn-primary fw-bold px-4">
                    </div>
                </div>
            </div>
        </div>
    </form>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"
        integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script type="text/javascript" charset="utf8"
        src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" charset="utf8"
        src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
</body>

</html>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}